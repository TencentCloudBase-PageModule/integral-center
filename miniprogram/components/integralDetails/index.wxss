.integralCenter-detalis-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
}

.integralCenter-detalis-scroll {
  flex: 1;
  height: 1px;
}

.integralCenter-detalis-page .integralCenter-detalis-page__statistics {
  text-align: right;
}

.integralCenter-detalis-page .integralCenter-detalis-page__num {
  font-size: 40rpx;
  color: #e54545;
}

.integralCenter-detalis-page .integralCenter-detalis-page__num .num-item {
  display: inline-block;
  vertical-align: 4rpx;
}

.integralCenter-detalis-page .integralCenter-detalis-page__statistics.is-add .integralCenter-detalis-page__num {
  color: #0abf5b;
}

.integralCenter-detalis-page .integralCenter-detalis-page__remain {
  font-size: 24rpx;
}

.integralCenter-detalis-page .integralCenter-none-more {
  width: 100%;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #888;
  padding: 20rpx 0;
}